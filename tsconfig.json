{
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "src",
    "outDir": "lib",
    "strict": true,
    "target": "es5",
    "module": "CommonJS",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "allowJs": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "declaration": true,
    "esModuleInterop": true,
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "include": [
    "global.d.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ],
  "compileOnSave": false
}
